<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_tree_product" model="ir.ui.view">
            <field name="name">Product Tree view</field>
            <field name="model">finance.product</field>
            <field name="arch" type="xml">
            <tree>
                <field name="date"/>
                <field name="amount"/>
                <field name="store"/>
                <field name="received" attrs="{'invisible': 1}"/>
                <field name="person" attrs="{'invisible': [('is_non_food', '=', True)]}"/>
                <field name="type_non_food" attrs="{'invisible': [('is_non_food', '=', False)]}"/>
            </tree>
            </field>
        </record>

        <act_window id="action_finance_income"
            name="Income"
            res_model="finance.income"
            view_mode="tree,form"
            context="{'group_by':'date'}"
        />



        <menuitem id="menu_finance_income"
            name="Income"
            sequence="20"
            action="action_finance_income" />

    </data>
</openerp>