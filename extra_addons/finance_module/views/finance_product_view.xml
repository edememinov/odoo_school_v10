<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <record id="finance_product_form" model="ir.ui.view">
            <field name="name">finance.product.form</field>
            <field name="model">finance.product</field>
            <field name="arch" type="xml">
                <form string="Banking" >
                    <group name="top">
                        <group name="left">
                            <field name="product_name"/>
                            <field name="price"/>
                        </group>
                        <group name="right">
                            <field name="store"/>
                            <field name="is_non_food"/>
                        </group>
                    </group>
                    <group name="bottom">
                        <field name="type_food" attrs="{'invisible': [('is_non_food', '=', True)]}"/>
                        <field name="type_non_food" attrs="{'invisible': [('is_non_food', '=', False)]}"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_tree_product" model="ir.ui.view">
            <field name="name">Product Tree view</field>
            <field name="model">finance.product</field>
            <field name="arch" type="xml">
            <tree>
                <field name="product_name"/>
                <field name="price"/>
                <field name="store"/>
                <!--<field name="is_non_food" attrs="{'invisible': 1}"/>-->
                <!--<field name="type_food" attrs="{'invisible': [('is_non_food', '=', True)]}"/>-->
                <!--<field name="type_non_food" attrs="{'invisible': [('is_non_food', '=', False)]}"/>-->
            </tree>
            </field>
        </record>

        <record id="product_search_view" model="ir.ui.view">
			<field name="name">product.search.view</field>
			<field name="model">finance.product</field>
			<field name="arch" type="xml">
				<search string="Products">
					<field name="product_name"/>
					<field name="price"/>
					<field name="store"/>
				</search>
			</field>
		</record>

        <act_window id="action_finance_product"
            name="Product"
            res_model="finance.product"
            view_mode="tree,form"
        />



        <menuitem id="menu_finance_product"
            name="Product"
            sequence="20"
            action="action_finance_product" />

    </data>
</openerp>