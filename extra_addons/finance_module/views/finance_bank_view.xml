                <!--<field name="computed_total_expense"/>-->
                <!--<field name="computed_total_income"/>-->
            <!--</tree>-->
            <!--</field>-->
        <!--</record>-->

        <act_window id="action_finance_bank"
            name="Bank"
            res_model="finance.bank"
            view_mode="tree,form"
            context="{'group_by':'date'}"
        />



        <menuitem id="menu_finance_bank"
            name="Bank"
            sequence="20"
            action="action_finance_bank" />

    </data>
</openerp>
